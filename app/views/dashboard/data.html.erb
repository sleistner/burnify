<graph 
  caption='Daily Visits' 
  subcaption='(from 8/6/2006 to 8/12/2006)' 
  hovercapbg='FFECAA' 
  hovercapborder='F47E00' 
  formatNumberScale='0' 
  decimalPrecision='0' 
  showvalues='0' 
  numdivlines='3' 
  numVdivlines='0' 
  yaxisminvalue='0' 
  yaxismaxvalue='100'  rotateNames='1'>

  <%- end_date = 1.month.from_now.to_date -%>
  <categories>
    <%- Date.today.step(end_date) do |day| -%>
    <category name='<%= day.to_s(:long) %>' />
    <%- end -%>
  </categories>

  <dataset seriesName='Ideal' color='1D8BD1' anchorBorderColor='1D8BD1' anchorBgColor='1D8BD1'>
    <%- i = 100; Date.today.step(end_date) do |day| -%>
    <set value='<%= i %>' />
    <%- i -= (100/26); end -%>
  </dataset>

  <dataset seriesName='Progress' color='F1683C' anchorBorderColor='F1683C' anchorBgColor='2AD62A'>
    <%- Date.today.step(end_date - 20) do |day| -%>
    <set value='<%= rand(100) %>' />
    <%- end -%>
  </dataset>
  
  <trendlines>
  <line startValue="22000" endValue="58000" color="999999" displayValue="Target" dashed="1" thickness="2" dashGap="6" alpha="100" showOnTop="1"/>
  </trendlines>

</graph>
