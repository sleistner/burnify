<div id="create_project_dialog">

  <h1>Create Project</h1>

  <% form_for Project.new do |f| %>

    <p>
      <label for="project_name">Name</label>
      <%= f.text_field 'name' %>
    </p>

    <p id="project_name_error"></p>

    <p>
      <%= f.submit 'Create', :onclick => 'document.fireEvent("project:save", this.form);return false' %>
    </p>

  <% end %>

</div>